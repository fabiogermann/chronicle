<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="account"
            type="local.oss.chronicle.data.model.Account" />

        <variable
            name="libraryCount"
            type="int" />

        <variable
            name="isExpanded"
            type="boolean" />

        <import type="android.view.View" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Avatar placeholder (circular) -->
            <View
                android:id="@+id/avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/colorAccent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Account display name -->
            <TextView
                android:id="@+id/display_name"
                style="@style/TextAppearance.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{account.displayName}"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/avatar"
                app:layout_constraintRight_toLeftOf="@id/expand_button"
                app:layout_constraintTop_toTopOf="@id/avatar"
                tools:text="John Doe" />

            <!-- Library count subtitle -->
            <TextView
                android:id="@+id/library_count_text"
                style="@style/TextAppearance.Body2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{@plurals/library_count(libraryCount, libraryCount)}"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintLeft_toLeftOf="@id/display_name"
                app:layout_constraintRight_toRightOf="@id/display_name"
                app:layout_constraintTop_toBottomOf="@id/display_name"
                tools:text="3 libraries" />

            <!-- Provider badge -->
            <TextView
                android:id="@+id/provider_badge"
                style="@style/TextAppearance.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp"
                android:text="@{account.providerType.toString()}"
                android:textAllCaps="true"
                android:textColor="@color/icon"
                app:layout_constraintLeft_toLeftOf="@id/avatar"
                app:layout_constraintTop_toBottomOf="@id/avatar"
                tools:text="PLEX" />

            <!-- Expand/collapse button -->
            <ImageButton
                android:id="@+id/expand_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/expand_collapse"
                android:rotation="@{isExpanded ? 180 : 0}"
                android:src="@drawable/ic_expand_more"
                android:tint="@color/icon"
                app:layout_constraintRight_toLeftOf="@id/remove_button"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Remove account button -->
            <ImageButton
                android:id="@+id/remove_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/remove_account"
                android:src="@drawable/ic_delete"
                android:tint="@color/icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
