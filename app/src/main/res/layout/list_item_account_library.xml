<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="library"
            type="local.oss.chronicle.data.model.Library" />

        <variable
            name="isActive"
            type="boolean" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp">

        <!-- Active indicator (vertical bar) -->
        <View
            android:id="@+id/active_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            android:visibility="@{isActive ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Library color indicator (circular) -->
        <View
            android:id="@+id/library_color_indicator"
            libraryColor="@{library}"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Library name -->
        <TextView
            android:id="@+id/library_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{library.name}"
            android:textAppearance="@style/TextAppearance.Body1"
            app:layout_constraintLeft_toRightOf="@id/library_color_indicator"
            app:layout_constraintRight_toLeftOf="@id/item_count"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Audiobooks" />

        <!-- Server name subtitle -->
        <TextView
            android:id="@+id/server_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{library.serverName}"
            android:textAppearance="@style/TextAppearance.Body2"
            app:layout_constraintLeft_toLeftOf="@id/library_name"
            app:layout_constraintRight_toRightOf="@id/library_name"
            app:layout_constraintTop_toBottomOf="@id/library_name"
            tools:text="My Plex Server" />

        <!-- Item count badge -->
        <TextView
            android:id="@+id/item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:text="@{String.valueOf(library.itemCount)}"
            android:textAppearance="@style/TextAppearance.Body2"
            android:textColor="@color/icon"
            app:layout_constraintBottom_toBottomOf="@id/library_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/library_name"
            tools:text="156" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
