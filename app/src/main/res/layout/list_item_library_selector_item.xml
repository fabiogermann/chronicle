<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="library"
            type="local.oss.chronicle.data.model.Library" />

        <variable
            name="accountName"
            type="String" />

        <variable
            name="isActive"
            type="boolean" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="@dimen/screen_horizontal_padding"
        android:paddingTop="12dp"
        android:paddingRight="@dimen/screen_horizontal_padding"
        android:paddingBottom="12dp">

        <!-- Active checkmark indicator -->
        <ImageView
            android:id="@+id/checkmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/active_library"
            android:src="@drawable/ic_done_white_24dp"
            android:tint="@color/colorAccent"
            android:visibility="@{isActive ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Library name -->
        <TextView
            android:id="@+id/library_name"
            style="@style/TextAppearance.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{library.name}"
            android:textColor="@color/textPrimary"
            app:layout_constraintLeft_toRightOf="@id/checkmark"
            app:layout_constraintRight_toLeftOf="@id/item_count"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Audiobooks" />

        <!-- Account + server info -->
        <TextView
            android:id="@+id/account_server"
            style="@style/TextAppearance.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{accountName + ` • ` + library.serverName}"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/library_name"
            app:layout_constraintRight_toRightOf="@id/library_name"
            app:layout_constraintTop_toBottomOf="@id/library_name"
            tools:text="John Doe • My Home Server" />

        <!-- Item count badge -->
        <TextView
            android:id="@+id/item_count"
            style="@style/TextAppearance.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:text="@{String.valueOf(library.itemCount)}"
            android:textColor="@color/icon"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/library_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/library_name"
            tools:text="127" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
