<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your theme here. -->
        
        <!-- Legacy Material Components colors (for backward compatibility) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Material Design 3 color mappings (Bridge approach - using existing colors) -->
        <!-- MD3 Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/textPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryDark</item>
        <item name="colorOnPrimaryContainer">@color/textPrimary</item>
        
        <!-- MD3 Secondary/Accent colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryContainer">@color/colorAccent</item>
        <item name="colorOnSecondaryContainer">@color/colorPrimary</item>
        
        <!-- MD3 Surface colors -->
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/textPrimary</item>
        <item name="colorSurfaceVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSurfaceVariant">@color/textSecondary</item>
        
        <!-- MD3 Background -->
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="colorOnBackground">@color/textPrimary</item>
        
        <!-- Edge-to-edge window configuration -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Custom font -->
        <item name="android:fontFamily">@font/lato</item>
        
        <!-- Chip styles -->
        <item name="chipStyle">@style/FilterChip</item>
        <item name="chipGroupStyle">@style/FilterChipGroup</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="FilterChipGroup" parent="Widget.Material3.ChipGroup">
        <item name="chipGroupStyle">@style/FilterChip</item>
        <item name="singleSelection">true</item>
        <item name="selectionRequired">true</item>
        <item name="chipSpacingHorizontal">@dimen/margin_small</item>
        <item name="chipSpacingVertical">@dimen/margin_small</item>
    </style>

    <style name="FilterChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipStartPadding">@dimen/margin_small</item>
        <item name="chipEndPadding">@dimen/margin_small</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipIconEnabled">false</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="chipMinHeight">36dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SectionHeader" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TextAppearance.Subtitle.Settings" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.RoundedRectInput" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">@dimen/rounded_input_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/rounded_input_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/rounded_input_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/rounded_input_padding_vertical</item>
        <item name="android:background">@drawable/rounded_rect_form</item>
        <item name="android:minEms">15</item>
    </style>

    <style name="TextAppearance.SleepTimerCountdown" parent="TextAppearance.Title">
        <item name="android:textSize">32sp</item>
    </style>

    <!-- Searchbar style courtesy of: https://stackoverflow.com/questions/30369246/implementing-searchview-as-per-the-material-design-guidelines -->
    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="layout">@layout/toolbar_search_view</item>
        <item name="colorControlNormal">@color/material_light_active_icon</item>
        <item name="colorControlHighlight">@color/material_ripple_light</item>
        <item name="android:maxWidth">9999dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="fontWeight">400</item>
        <item name="fontFamily">@font/lato</item>
        <item name="searchViewStyle">@style/SearchViewTheme</item>
    </style>

    <!-- Progress Slider -->
    <style name="ProgressSliderTooltip" parent="Widget.Material3.Tooltip">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textAppearance">@style/ProgressSliderTextAppearance</item>

        <item name="android:background">@color/colorAccent</item>
        <item name="fontWeight">400</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="ProgressSliderTextAppearance" parent="@style/TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/lato</item>
        <item name="fontWeight">600</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="itemIconTint">@color/chip_background_color</item>
        <item name="itemTextColor">@color/chip_background_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">12dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

</resources>
